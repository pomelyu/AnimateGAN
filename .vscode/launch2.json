{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Preprocess Video",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/preprocess_video.py",
            "console": "integratedTerminal",
            "args": [
                "--video=data/IMG_9066/IMG_9066.mov",
                "--out_dir=data/IMG_9066/faces",
                "--use_gpu",
                "--skip_frame=1",
                "--skip_head=1",
                "--skip_tail=1",
                "--crop_size=512",
            ]
        },
        {
            "name": "Train XGAN",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--model=xgan",
                "--dataset_mode=unaligned",
                "--dataA=data/IMG_9063/faces",
                "--dataB=data/IMG_9065/faces",
                "--checkpoints_dir=checkpoints/IMG63_to_65",
                "--load_size=64",
                "--crop_size=64",
                "--gpu_ids=0",
                "--num_threads=0",
                "--print_freq=2000",
                "--display_freq=200",
                "--save_epoch_freq=10",
                "--niter=150",
                "--niter_decay=50",
                "--epoch=0",
                "--epoch_count=1",
                "--name=xgan_lr-4",
                "--lr=0.0001",
                "--batch_size=16",
                "--lambda_dann=1",
                "--lambda_sem=1",
                "--lambda_rec=10",
            ]            
        },
    ]
}